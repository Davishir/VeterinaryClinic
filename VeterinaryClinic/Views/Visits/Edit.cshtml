@model VeterinaryClinic.Models.Visit

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Посещение</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VisitID" />
            <div class="form-group">
                <label asp-for="AnimalID" class="control-label"></label>
                <select asp-for="AnimalID" class="form-control" asp-items="ViewBag.AnimalID"></select>
                <span asp-validation-for="AnimalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerID" class="control-label"></label>
                <select asp-for="OwnerID" class="form-control" asp-items="ViewBag.OwnerID"></select>
                <span asp-validation-for="OwnerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complaints" class="control-label"></label>
                <input asp-for="Complaints" class="form-control" />
                <span asp-validation-for="Complaints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label"></label>
                <input asp-for="Diagnosis" class="form-control" />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttendinDoctor" class="control-label"></label>
                <input asp-for="AttendinDoctor" class="form-control" />
                <span asp-validation-for="AttendinDoctor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dateofvisit" class="control-label"></label>
                <input asp-for="Dateofvisit" class="form-control" />
                <span asp-validation-for="Dateofvisit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Обратно к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
