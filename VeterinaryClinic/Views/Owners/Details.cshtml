@model VeterinaryClinic.Models.Owner

@{
    ViewData["Title"] = "Details";
}

<h1>Подробности</h1>

<div>
    <h4>Клиент</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt class="col-sm-2">
            Посещение
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th> Питомец Кличка</th>
                    <th>Жалобы</th>
                </tr>
                @foreach (var item in Model.Visits)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Animal.NickName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Complaints)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OwnerID">Редактировать</a> |
    <a asp-action="Index">Обратно к списку</a>
</div>
